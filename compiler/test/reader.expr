package reader

import io

struct Reader {
  byte[] data
  int counter
  int index

  func Read(int amount) []byte
  func ReadRange(int start, end) []byte
}

func New(byte[] data) *Reader { 
  return &Reader {
    data: data
  }
}

func Read(int amount) []byte {
  if $.counter < data.Length() {
    defer $.counter++
    return data[$.counter]
  }

  return io.EOF
}

Reader.ReadRange(int start, end) byte[] {
  if start > 0 && end < $.counter {
    return data[start:end]
  }

  return nil
}